<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="LambdaTest Selenium101" parallel="tests" thread-count="2">
    <test name="Windows Chrome">
        <parameter name="browser" value="Chrome" />
        <parameter name="version" value="latest" />
        <parameter name="platform" value="Windows 10" />
        <classes>
            <class name="tests.SimpleFormDemo"/>
            <class name="tests.DragDropSliders"/>
            <class name="tests.InputFormSubmit"/>
        </classes>
    </test>

    <test name="Mac Safari">
        <parameter name="browser" value="Safari" />
        <parameter name="version" value="latest" />
        <parameter name="platform" value="macOS Sonoma" />
        <classes>
            <class name="tests.SimpleFormDemo"/>
            <class name="tests.DragDropSliders"/>
            <class name="tests.InputFormSubmit"/>
        </classes>
    </test>
</suite>
